<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    android:layout_width="match_parent" android:layout_height="wrap_content">


        <TextView android:id="@+id/receivedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textIconsColor"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="20sp"
            android:elevation="1000dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/received_message_bg"
            android:text="Message From Sender"
            />

        <TextView android:id="@+id/sentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textIconsColor"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:elevation="1000dp"
            android:textSize="20sp"
            android:background="@drawable/sent_message_bg"
            android:layout_alignParentRight="true"
            android:text="Message To Sender" />


</RelativeLayout>